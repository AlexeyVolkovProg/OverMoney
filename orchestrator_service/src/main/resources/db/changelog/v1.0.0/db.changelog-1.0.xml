<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="1" author="kyomexd">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="kyomexd">
        <dropColumn tableName="users" columnName="name"/>
        <addColumn tableName="users">
            <column name="username" type="VARCHAR(255)"/>
            <column name="firstName" type="VARCHAR(255)"/>
            <column name="lastName" type="VARCHAR(255)"/>
            <column name="photoUrl" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="authDate" type="VARCHAR(255)"/>
            <column name="roles" type="VARCHAR(255)"/>
        </addColumn>
        <createTable tableName="roles">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="kyomexd">
        <dropColumn tableName="users">
            <column name="firstName"/>
            <column name="lastName"/>
            <column name="photoUrl"/>
            <column name="authDate"/>
        </dropColumn>
        <addColumn tableName="users">
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="photo_url" type="VARCHAR(255)"/>
            <column name="auth_date" type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="4" author="kyomexd">
        <addAutoIncrement tableName="users" columnName="id"/>
        <addAutoIncrement tableName="roles" columnName="id"/>
    </changeSet>
</databaseChangeLog>